<h1>My Outfits</h1>

<ul>
<% @outfits.each do |outfit| %>
  <li>
    Name: <%= outfit.name %>
  </li>
  <li>
    Season: <%= outfit.season  %>
  </li>
  <li>
    Formality Level: <%= outfit.formality_level %>
  </li><br>

<h3>Items in this Outfit:</h3>
  <ul><% outfit.items.each do |item| %>
    <li>
      Category: <%= item.category %>
    </li>
    <li>
      Color: <%= item.color  %>
    </li>
    <li>
      Fabric: <%= item.fabric %>
    </li>
    <li>
    <% if item.brand %>
      Brand: <%= item.brand.name %>
      <% end %>
    </li><br>
    <%end %></ul>

  </li>
  <%end %>
</ul>


<%= link_to "Make a new outfit", new_outfit_path %>
